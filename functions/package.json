{
  "name": "functions",
  "private": true,
  "scripts": {
    "dev": "next app",
    "build-app": "next build app",
    "build-functions": "tsc --project server",
    "build": "yarn build-app && yarn build-functions",
    "serve": "yarn build && cross-env NODE_ENV=production firebase serve --only functions,hosting",
    "deploy": "cross-env NODE_ENV=production firebase deploy --only functions,hosting",
    "lint": "eslint '**/*.{ts,tsx}'",
    "type-check": "tsc --project server --noEmit && tsc --project app --noEmit"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^8.7.0",
    "firebase-functions": "^3.3.0",
    "next": "^9.1.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "firebase-tools": "^7.7.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  },
  "resolutions": {
    "@types/react": "^16.9.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "git add"]
  }
}
