{
  "name": "functions",
  "private": true,
  "scripts": {
    "dev": "next app",
    "build-app": "next build app",
    "build-functions": "tsc --project server",
    "build": "yarn build-app && yarn build-functions",
    "serve": "yarn build && cross-env NODE_ENV=production firebase serve --only functions,hosting",
    "deploy": "cross-env NODE_ENV=production firebase deploy --only functions,hosting",
    "lint": "eslint '**/*.{ts,tsx}'",
    "type-check": "tsc --project server --noEmit && tsc --project app --noEmit"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.2.0",
    "next": "^9.0.8",
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  },
  "devDependencies": {
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.2",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "firebase-tools": "^7.4.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "git add"]
  }
}
