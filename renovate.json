{
  "timezone": "Asia/Tokyo",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "rangeStrategy": "pin",
  "schedule": ["on friday"],
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "groupName": "development tools",
      "matchPackageNames": [
        "lint-staged",
        "husky",
        "cross-env",
        "rimraf"
      ]
    }
  ]
}
